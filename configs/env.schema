# Environment Variable Schema
# Version: 1.0.0
# Validation: Required for all environments

# ====================
# Application
# ====================
NODE_ENV=development|staging|production  # Required
APP_NAME=ats-resume-platform             # Required
APP_URL=string                           # Required, URL format
PORT=number:3000                         # Optional, default: 3000

# ====================
# Database
# ====================
DATABASE_URL=string                      # Required, connection string
DATABASE_POOL_MIN=number:2               # Optional, default: 2
DATABASE_POOL_MAX=number:10              # Optional, default: 10

# ====================
# AI Services
# ====================
AI_PROVIDER=huggingface|openai|anthropic # Required
HUGGINGFACE_API_KEY=string               # Required if AI_PROVIDER=huggingface
HUGGINGFACE_MODEL=string:Qwen/Qwen2.5-72B-Instruct  # Optional
OPENAI_API_KEY=string                    # Required if AI_PROVIDER=openai
ANTHROPIC_API_KEY=string                 # Required if AI_PROVIDER=anthropic

AI_TEMPERATURE=number:0.0                # Optional, 0.0-1.0
AI_MAX_TOKENS=number:4096                # Optional
AI_TIMEOUT_MS=number:30000               # Optional, default: 30s

# ====================
# Authentication
# ====================
JWT_SECRET=string                        # Required, min 32 chars
JWT_EXPIRES_IN=string:24h                # Optional, default: 24h
SESSION_SECRET=string                    # Required, min 32 chars

# ====================
# File Storage
# ====================
STORAGE_PROVIDER=local|s3|gcs            # Required
S3_BUCKET=string                         # Required if STORAGE_PROVIDER=s3
S3_REGION=string                         # Required if STORAGE_PROVIDER=s3
S3_ACCESS_KEY=string                     # Required if STORAGE_PROVIDER=s3
S3_SECRET_KEY=string                     # Required if STORAGE_PROVIDER=s3
MAX_FILE_SIZE_MB=number:5                # Optional, default: 5MB

# ====================
# Monitoring
# ====================
LOG_LEVEL=debug|info|warn|error          # Optional, default: info
SENTRY_DSN=string                        # Optional
METRICS_ENABLED=boolean:true             # Optional

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_WINDOW_MS=number:900000       # Optional, 15 minutes
RATE_LIMIT_MAX_REQUESTS=number:100       # Optional

# ====================
# CORS
# ====================
ALLOWED_ORIGINS=string                   # Required, comma-separated URLs
